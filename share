<!Doctype HTML>
<html>
	<head>
		<meta charset = 'utf-8'/>
		<title>share</title>
		<style>
			#div1{
				width: 100px;
				height: 200px;
				background: red;
				position: absolute;
				left: -100px;
				top: 100px;
			}
			#div2{
				width: 30px;
				height: 60px;
				position: absolute;
				right: -30px;
				top: 70px;
				background: black;
			}
		</style>
		<script>
			window.onload = function (){
				var oDiv1 = document.getElementById('div1');

				oDiv1.onmouseover = function (){
					this.style.left = '0px';
				}
				oDiv1.onmouseout = function (){
					this.style.left= '-100px';
				}
			}
		</script>
	</head>

	<body>

		<div id="div1">
			<div id="div2">share</div>
		</div>

	</body>
</html>
